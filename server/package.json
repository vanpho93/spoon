{
  "name": "training",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Pho Nguyen <pho.nguyenvan@nashtechglobal.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "camelcase-keys": "^6.2.2",
    "cors": "^2.8.5",
    "decamelize": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.20.15",
    "lodash": "^4.17.15",
    "pg": "^8.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.7",
    "@types/pg": "^7.14.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "DOTENV_CONFIG_PATH=test.env nodemon --exec mocha dist/**/*.test.js -e ts --recursive",
    "testw": "set DOTENV_CONFIG_PATH=test.env&&nodemon --exec mocha dist/**/*.test.js -e ts --recursive",
    "coverage-test": "DOTENV_CONFIG_PATH=test.env nyc mocha src/**/*.test.ts -e ts --recursive",
    "coverage-testw": "set DOTENV_CONFIG_PATH=test.env&&nyc mocha src/**/*.test.ts -e ts --recursive"
  },
  "mocha": {
    "full-trace": true,
    "require": [
      "dotenv/config",
      "ts-node/register",
      "source-map-support/register"
    ],
    "bail": true,
    "timeout": 1000000
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true,
    "exclude": [
      "src/**/*.test.ts"
    ]
  }
}
